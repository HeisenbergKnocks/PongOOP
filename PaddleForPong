import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;
import java.awt.event.KeyEvent;


public class PaddleForPong {
	private int px; //starting x position of paddle
	private int py; //staring y position of paddle
	private int pw; //same as the width of a ball?
	private int ph; // 4 times taller than it is wide
	private int p_vy; //y velocity of paddle
	private int score; 
	
	public void paint(Graphics g) {

		//set color of paint for the paddle
		g.setColor(Color.magenta);
		g.drawRect(px, py, pw, ph);
		
	}
	
	public PaddleForPong(){
		px = 0;
		py = 0;
		pw = 40;
		ph = 160;
		p_vy = 0;
		//score = 0;
	}
	
	public PaddleForPong(int newpx, int newpy, int newpw, int newph, int newp_vy /*int newscore */) {
		super();
		px = newpx;
		py = newpy;
		pw = newpw;
		ph = newph;
		p_vy = newp_vy;
		
	}

	public void move() {
		py += p_vy;
	}
	
	
	
	public void setVy(int newVy){
		p_vy = newVy;
	}
	
	public int getPx() {
		return px;
	}

	public void setPx(int px) {
		this.px = px;
	}

	public int getPy() {
		return py;
	}

	public void setPy(int py) {
		this.py = py;
	}

	public int getPw() {
		return pw;
	}

	public void setPw(int pw) {
		this.pw = pw;
	}

	public int getPh() {
		return ph;
	}

	public void setPh(int ph) {
		this.ph = ph;
	}
	
}
